#shop {
  width: 100%;
  margin: 20rpx 0;
}
#shop .shop-item {
  display: flex;
  justify-content: space-around;
  box-shadow: 1px 4px 4px #888888;
  margin-top: 35rpx;
}
#shop .shop-item .img {
  width: 30%;
}
#shop .shop-item .img image {
  width: 200rpx;
  height: 200rpx;
}
#shop .shop-item .shuju {
  width: 70%;
}
#shop .shop-item .shuju .left {
  display: flex;
  justify-content: space-between;
}
#shop .shop-item .shuju .left .name {
  color: #333;
  font-size: 26rpx;
}
#shop .shop-item .shuju .logo {
  margin-top: 16rpx;
  color: #999;
  font-size: 24rpx;
}
#shop .shop-item .shuju .right {
  display: flex;
  justify-content: space-between;
  margin-top: 43rpx;
}
#shop .shop-item .shuju .right .price {
  color: #F00;
  font-size: 30rpx;
}
#shop .shop-item .shuju .right button {
  width: 40rpx;
  height: 40rpx;
  line-height: 4rpx;
}
#shop .shop-item .shuju .right input {
  width: 30rpx;
}
#zong {
  width: 100%;
  height: 40px;
  position: fixed;
  bottom: 0px;
  background-color: white;
}
#zong .checkAll {
  display: flex;
  justify-content: space-between;
  line-height: 30px;
}
#zong .checkAll .checkAll-item {
  width: 20%;
}
#zong .checkAll .checkAll-item radio {
  line-height: 40px;
}
#zong .checkAll .calculate {
  width: 70%;
  display: flex;
  justify-content: space-around;
}
#zong .checkAll .calculate .shu {
  line-height: 40px;
}
#zong .checkAll .calculate .shu .price {
  color: #FF6600;
}
#zong .checkAll .calculate .button {
  width: 270rpx;
  background-color: #FF6600;
  color: white;
}
#noShop {
  width: 100%;
}
#noShop .noShop-item {
  text-align: center;
}
#noShop .noShop-item .wu {
  margin-top: 5rpx;
  font-size: 30rpx;
  margin-bottom: 20rpx;
}
#noShop .noShop-item .xuan {
  color: gray;
  font-size: 24rpx;
  margin-bottom: 30rpx;
}
#noShop .noShop-item navigator {
  background-color: #96602E;
  color: white;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 5px;
  margin: 10rpx 10rpx;
}
